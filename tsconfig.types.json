{
  "include": ["tsconfig.json", "src/**/*"],
  "exclude": ["jest.config.ts", "vitest.config.ts"],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "rootDir": "./src",
    "moduleResolution": "Node",
    // "types": [
    //     "vite/client",
    //     "@testing-library/jest-dom"
    // ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
